  "complications": {
    "type": "list",
    "description": "Complications observed during or after block",
    "options": [
      "Intravascular injection",
      "Neurological injury",
      "Hematoma",
      "Infection",
      "Incomplete block",
      "Systemic toxicity",
      "None"
    ]
