{
  "patient_id": {
    "type": "list",
    "description": "Unique identifier for the patient",
    "options": [],
    "key_field": true
  },
  "block_type": {
    "type": "list",
    "description": "Type of hip nerve block performed",
    "options": [
      "Femoral Nerve Block",
      "Sciatic Nerve Block",
      "Lumbar Plexus Block (3-in-1)",
      "Pericapsular Nerve Group (PENG) Block",
      "Saphenous Nerve Block",
      "Combined Femoral + Sciatic",
      "Other"
    ]
  },
  "technique": {
    "type": "list",
    "description": "Method used to perform the block",
    "options": [
      "Ultrasound-guided",
      "Nerve stimulator-guided",
      "Landmark-based",
      "Combined ultrasound and nerve stimulator",
      "Other"
    ]
  },
  "local_anesthetic": {
    "type": "list",
    "description": "Type and concentration of local anesthetic used",
    "options": [
      "Lidocaine 1%",
      "Lidocaine 2%",
      "Ropivacaine 0.2%",
      "Ropivacaine 0.5%",
      "Ropivacaine 0.75%",
      "Bupivacaine 0.25%",
      "Bupivacaine 0.5%",
      "Other"
    ]
  },
  "volume_ml": {
    "type": "radio",
    "description": "Total volume of local anesthetic administered (mL)",
    "options": [
      "10",
      "15",
      "20",
      "25",
      "30",
      "35",
      "40+"
    ],
    "max_points": 5
  },
  "additives_used": {
    "type": "list",
    "description": "Any additives to the local anesthetic",
    "options": [
      "Epinephrine",
      "Dexmedetomidine",
      "Bicarbonate",
      "Clonidine",
      "None"
    ]
